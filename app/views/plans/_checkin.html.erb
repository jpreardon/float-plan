<h3>Return Checklist</h3>
<p>This checklist will appear when the boat returns.</p>

<div class="form-group">
  <%= f.label :time_in %>
  <%= f.time_field :time_in, 
      value: @plan.time_in.nil? ? format_time_html(Time.zone.now) : format_time_html(@plan.time_in), 
      class: 'form-control' 
  %>
</div>

<fieldset class="form-group">
  <legend class="col-form-label-lg">Derigging Checklist</legend>
  <div class="form-check">
      <%= check_box_tag :lines, '', false, class: 'form-check-input' %>
      <%= label_tag :lines, 'lines coiled' %>
  </div>
  <div class="form-check">
      <%= check_box_tag :tiller, '', false, class: 'form-check-input' %>
      <%= label_tag :tiller, 'tiller lashed (with clove hitch)' %>
  </div>
  <div class="form-check">
      <%= check_box_tag :backstay, '', false, class: 'form-check-input' %>
      <%= label_tag :backstay, 'backstay loose' %>
  </div>
  <div class="form-check">
      <%= check_box_tag :engine, '', false, class: 'form-check-input' %>
      <%= label_tag :engine, 'engine out of water' %>
  </div>
  <div class="form-check">
      <%= check_box_tag :rinse, '', false, class: 'form-check-input' %>
      <%= label_tag :rinse, 'deck rinsed' %>
  </div>
</fieldset>

<div class="form-group">
  <div class="form-check">
    <%= f.check_box :checkin_complete, class: 'form-check-input' %>
    <%= f.label :checkin_complete, class: 'form-check-label' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :notes_in, 'Checkin Notes' %>
  <%= f.text_area :notes_in, class: 'form-control' %>
  <small id="notesInHelp" class="form-text text-muted">Note missing or damaged gear and other issues with the boat.</small>
</div>