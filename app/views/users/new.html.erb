<% provide(:title, 'New User') %>
<h1>New User</h1>

<div class="row">
  <div class="col-lg-6">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :mobile, "Mobile Number" %>
        <%= f.text_field :mobile, class: 'form-control' %>
        <small id="mobileHelp" class="form-text text-muted">Digits only - area code + phone number</small>
      </div>
      
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-check">
        <%= f.check_box :skipper, class: 'form-check-input' %>
        <%= f.label :skipper, class: 'form-check-label' %>
      </div>
      
      <div class="form-check">
        <%= f.check_box :admin, class: 'form-check-input' %>
        <%= f.label :admin, 'Site Administrator', class: 'form-check-label' %>
        <small id="adminHelp" class="form-text text-muted">Administrators can add & delete users and see reports.</small>
      </div>
      
    <% end %>
  </div>
</div>



